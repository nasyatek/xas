<link rel="stylesheet" href="/assets/dataTables.bootstrap.css" type="text/css">
<link rel="stylesheet" href="/assets/jquery.dataTables.min.css" type="text/css">
<script src="/assets/dataTables.bootstrap.js"></script>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"><%= t('menu.temp_history')%></h3>
        </div><!-- /.box-header -->
        <div class="box-body">

          <table id="example1" class="table table-bordered table-striped">
            <thead>
            <th><%= t('global.celsius')%></th>
            <th><%= t('global.fahrenheit')%></th>
            <th><%= t('mailer.humidity')%></th>
            <th><%= t('menu.status')%></th>
            <th><%= t('global.date')%></th>
            </tr>
            </thead>
            <tbody>
            <% @array_tempc_values.each do |a| %>
                <tr>
                  <td><%= a.tempc %></td>
                  <td><%= a.tempf %></td>
                  <td><%= a.temph %></td>
                  <td><%= a.mark ? t('global.old') : t('global.new') %></td>
                  <td><%= a.created_at %></td>
                </tr>
            <% end %>
            </tbody>
            <tfoot>
            <tr>
              <th><%= t('global.celsius')%></th>
              <th><%= t('global.fahrenheit')%></th>
              <th><%= t('mailer.humidity')%></th>
              <th><%= t('menu.status')%></th>
              <th><%= t('global.date')%></th>
            </tr>

            </tfoot>
          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div><!-- /.col -->
  </div><!-- /.row -->
</section><!-- /.content -->

<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>