<header class="header">
  <a href="/welcome/dashboard" class="logo">
    <!-- Add the class icon to your logo image or logo icon to add the margining -->
    <%= t('company') %>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <div class="navbar-right">
      <ul class="nav navbar-nav">

        <!-- LANGUAGE -->
        <li class="dropdown messages-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-flag-o"></i>
            <span class="label label-success"></span>
          </a>
          <ul class="dropdown-menu">
            <li class="header">
              <%= link_to t('turkish'), :locale => 'tr' %>
            </li>
            <li class="header">
              <%= link_to t('english'), :locale => 'en' %>
            </li>
          </ul>
        </li>
        <!-- LANGUAGE SON -->

        <li class="dropdown messages-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-envelope"></i>
            <span class="label label-success"><%= Temp.all.where(:mark => true).count %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="header"><%= t('global.have_message', :count => Temp.all.where(:mark => true).count) %></li>
            <li class="footer"><a href="/welcome/alarms"><%= t('global.see_alarms') %></a></li>
          </ul>
        </li>
        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="glyphicon glyphicon-user"></i>
            <span>Adem HİÇDURMAZ <i class="caret"></i></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header bg-light-blue">
              <!--<img src="assets/bilbakalimne.jpg" class="img-circle" alt="User Image"/>-->
              <p>
                Adem HİÇDURMAZ - Bilgisayar Mühendisi
                <small><%= t('global.member_date', :member_date => Time.now.to_date) %></small>
              </p>
            </li>
            <li class="user-footer">
              <div class="pull-left">
                <a href="#" class="btn btn-default btn-flat"><%= t('profile') %></a>
              </div>
              <div class="pull-right">
                <%= link_to t('sign_out'), destroy_user_session_path, :method => :delete, :class => "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>