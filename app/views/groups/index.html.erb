<% content_for :content_header do %>
    <section class="content-header">
      <br/>
      <!-- <h1><%= t('menu.listing') %> <small><%= t('side_menu.groups') %></small></h1> -->
      <ol class="breadcrumb">
        <li>
          <a href="/"><i class="fa fa-dashboard"></i> <%= t('side_menu.home') %></a>
        </li>
        <li class="active">
          <%= t('side_menu.groups') %>
        </li>
      </ol>
    </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_group_path(@group), :class => 'btn btn-success' do %>
                <%= t('menu.new_group') %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th><%= t('menu.name') %></th>
              <th><%= t('menu.index_number') %></th>
              <th><%= t('menu.status') %></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <%= content_tag_for(:tr, @groups) do |group| %>
                <td><%= group.name %></td>
                <td><%= group.index_number %></td>
                <td><%= group.status ? 'Aktif' : 'Pasif' %></td>
                <td><%= link_to '', group, :class => 'fa fa-eye' %></td>
                <td><%= link_to '', edit_group_path(group), :class => 'fa fa-edit' %></td>
                <td><%= link_to '', group, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'fa fa-trash-o' %></td>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
