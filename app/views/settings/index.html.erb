<% content_for :content_header do %>
    <section class="content-header">
     <!-- <h1><%= t('menu.listing') %>
        <small><%= t('side_menu.setting') %></small>
      </h1> --> <br />

      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i><%= t('side_menu.home') %></a></li>
        <li class="active"><%= t('side_menu.settings') %></li>
      </ol>
    </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_setting_path(@setting), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-save-file"></span>
                <%= t('side_menu.new_setting') %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th><%= t('menu.name') %></th>
              <th><%= t('menu.value') %></th>
              <th><%= t('menu.show') %></th>
              <th><%= t('menu.edit') %></th>
              <th><%= t('menu.delete') %></th>
            </tr>
            </thead>
            <tbody>
            <%= content_tag_for(:tr, @settings) do |setting| %>
                <td><%= setting.name %></td>
                <td><%= setting.value %></td>
                <td><%= link_to '', setting, :class => 'fa fa-eye' %></td>
                <td><%= link_to '', edit_setting_path(setting), :class => 'fa fa-edit' %></td>
                <td><%= link_to '', setting, method: :delete, data: {confirm: "#{t('menu.name')}"}, :class => 'fa fa-trash-o' %></td>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

