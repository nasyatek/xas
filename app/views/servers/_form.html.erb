<section class="content invoice">
	<div class="row">
		<div class="col-md-10">
			<%= form_for(@server, :html => { :role => "form" }) do |f| %>
			<% if @server.errors.any? %>
			<div class="alert alert-danger alert-dismissable" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">
					x
				</button>
				<h4><%= pluralize(@server.errors.count, "error") %> prohibited this server from being saved:</h4>

				<ul>
					<% @server.errors.full_messages.each do |msg| %>
					<li>
						<%= msg %>
					</li>
					<% end %>
				</ul>
			</div>
			<% end %>

			<div class="form-group">
        <%= f.label :ip, t('menu.ip') %>
				<%= f.text_field :ip, :class => "form-control" %>
			</div>
			<div class="form-group">
        <%= f.label :hostname, t('menu.hostname') %>
				<%= f.text_field :hostname, :class => "form-control" %>
			</div>
			
			<div class="form-group">
        <%= f.label :index_number, t('menu.index_number') %>
				<%= f.number_field :index_number, :class => "form-control" %>
			</div>

			<div class="form-group">
        <%= f.label :status, t('menu.status') %>
				<%= f.check_box :status, :class => "form-control" %>
			</div>
			<div class="form-group">
        <%= f.label :note, t('menu.note') %>
				<%= f.text_area :note, :class => "form-control" %>
			</div>

			<div class="form-group">
				<%= f.collection_select :group_id, Group.all, :id, :name,  {:selected => @server.group_id}, :promt =>
        true, :class=> "form-control" %>
			</div>

			<div class="form-group">
        <%
           if @server.persisted? ? buttonName=t('menu.update') : buttonName=t('menu.create')

           end
        %>
        <%= f.submit buttonName, :class => "btn btn-primary" %>
				<%= link_to servers_path, :class => 'btn btn-primary' do %>
				    <%= t('menu.back') %>
				<% end %>
			</div>
			<% end %>
		</div>
	</div>
</section>
