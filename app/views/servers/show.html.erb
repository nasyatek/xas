<% content_for :content_header  do %>
<section class="content-header">
	<!-- <h1><%= t('menu.show')%> <small><%= t('side_menu.server')%></small></h1> -->
  <br />
	<ol class="breadcrumb">
		<li>
			<a href="/"><i class="fa fa-dashboard"></i><%= t('side_menu.home')%></a>
		</li>
		<li>
			<%= link_to t('side_menu.servers'), servers_path %>
		</li>
		<li class="active">
          <%= t('menu.show')%>
		</li>
	</ol>
</section>
<% end %>

<section class="content">
	<div class="row">
		<div class="col-md-12">
			<div class="box box-primary">
        <!--<div class="box-header">
          <div class="box-tools pull-right">

          </div>
          <div class="box-tools pull-right">

          </div>
        </div>-->
				<div class="box-body">
					<dl class="dl-horizontal">
						<dt>
              <%= t('menu.ip') %>:
						</dt>
						<dd>
							<%= @server.ip %>
						</dd>

						<dt>
              <%= t('menu.hostname') %>:
						</dt>
						<dd>
							<%= @server.hostname %>
						</dd>
						
						<dt>
              <%= t('menu.index_number') %>:
						</dt>
						<dd>
							<%= @server.index_number %>
						</dd>

						<dt>
              <%= t('menu.status') %>:
						</dt>
						<dd>
							<%= @server.status ? 'Aktif' : 'Pasif'%>
						</dd>

						<dt>
              <%= t('menu.note') %>:
						</dt>
						<dd>
							<%= @server.note %>
            </dd>
            <br/>
            <dt>
              <%= link_to edit_server_path(@server), :class => 'btn btn-primary' do %>

                  <%= t('menu.edit') %>
              <% end %>

            </dt>
            <dd>
              <%= link_to servers_path, :class => 'btn btn-primary' do %>

                  <%= t('menu.back') %>
              <% end %>
            </dd>

					</dl>
				</div>
			</div>
		</div>
	</div>
</section>

