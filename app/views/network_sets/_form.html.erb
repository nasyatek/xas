<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@network_set, :html => {:role => "form"}) do |f| %>
          <% if @network_set.errors.any? %>
              <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h4><%= pluralize(@network_set.errors.count, "error") %> prohibited this network_set from being
                  saved:</h4>

                <ul>
                  <% @network_set.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :hostname, t('menu.hostname') %>
            <%= f.text_field :hostname, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :address, t('menu.address') %>
            <%= f.text_field :address, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :netmask, t('menu.netmask') %>
            <%= f.text_field :netmask, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :network, t('menu.network') %>
            <%= f.text_field :network, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :broadcast, t('menu.broadcast') %>
            <%= f.text_field :broadcast, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :gateway, t('menu.gateway') %>
            <%= f.text_field :gateway, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%
               if @network_set.persisted? ? buttonName=t('menu.update') : buttonName=t('menu.create')
               end
            %>
            <%= f.submit buttonName, :class => "btn btn-primary" %>
            <%= link_to network_sets_path, :class => 'btn btn-primary' do %>
                <%= t('menu.back') %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</section> 