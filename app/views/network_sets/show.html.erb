<% content_for :content_header do %>
    <section class="content-header">
      <!--<h1>Show
        <small>network_set</small>
      </h1>--><br/>

      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> <%= t('side_menu.home') %></a></li>
        <li><%= link_to t('side_menu.network_setting'), network_sets_path %></li>
        <li class="active"><%= t('menu.show') %></li>
      </ol>
    </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">

          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt><%= t('menu.hostname')%></dt>
            <dd><%= @network_set.hostname %></dd>

            <dt><%= t('menu.address')%></dt>
            <dd><%= @network_set.address %></dd>

            <dt><%= t('menu.netmask')%></dt>
            <dd><%= @network_set.netmask %></dd>

            <dt><%= t('menu.network')%></dt>
            <dd><%= @network_set.network %></dd>

            <dt><%= t('menu.broadcast')%></dt>
            <dd><%= @network_set.broadcast %></dd>

            <dt><%= t('menu.gateway')%></dt>
            <dd><%= @network_set.gateway %></dd>
            <br>
            <dt><%= link_to edit_network_set_path(@network_set), :class => 'btn btn-primary' do %>
                  <%= t('menu.edit') %>
              <% end %></dt>
            <dd>
              <%= link_to network_sets_path, :class => 'btn btn-primary' do %>
                  <%= t('menu.back') %>
              <% end %>
            </dd>

          </dl>
        </div>
      </div>
    </div>
  </div>
</section>

