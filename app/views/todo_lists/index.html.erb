<% content_for :content_header  do %>
  <section class="content-header">
   <!-- <h1><%= t('menu.listing')%> <small><%= t('menu.todo_list')%></small></h1> --><br />

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%= t('side_menu.home')%></a></li>
      <li class="active"><%= t('menu.todo_list')%></li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_todo_list_path(@todo_list), :class => 'btn btn-success' do %>

                <%= t('menu.new_todo_list')%>
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th><%= t('menu.note')%></th>
              <th><%= t('menu.active')%></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @todo_lists) do |todo_list| %>
              <td><%= todo_list.note %></td>
              <td><%= todo_list.active %></td>
                <td><%= link_to  '', todo_list, :class => 'fa fa-eye' %></td>
                <td><%= link_to  '', edit_todo_list_path(todo_list), :class => 'fa fa-edit' %></td>
                <td><%= link_to  '', todo_list, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'fa fa-trash-o' %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

