<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@xapachi_set, :html => {:role => "form"}) do |f| %>
          <% if @xapachi_set.errors.any? %>
              <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h4><%= pluralize(@xapachi_set.errors.count, "error") %> prohibited this xapachi_set from being
                  saved:</h4>

                <ul>
                  <% @xapachi_set.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :name, t('menu.name') %>
            <%= f.text_field :name, :class => "form-control", :readonly => @xapachi_set.persisted? %>
          </div>
          <div class="form-group">
            <%= f.label :value, t('menu.value') %>
            <%= f.text_field :value, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :desc, t('menu.desc') %>
            <%= f.text_field :desc, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%
               if @xapachi_set.persisted? ? buttonName=t('menu.update') : buttonName=t('menu.create')
               end
            %>
            <%= f.submit buttonName, :class => "btn btn-primary" %>
            <%= link_to xas_sets_path, :class => 'btn btn-primary' do %>
                <%= t('menu.back') %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</section> 